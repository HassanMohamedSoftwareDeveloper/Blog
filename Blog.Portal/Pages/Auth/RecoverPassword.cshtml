@page
@model Blog.Portal.Pages.Auth.RecoverPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Recover Password";
}

<div class="login-box">
    <div class="login-logo">
        <a asp-page="~/dashboard/index"><b>Hassan</b>Blog</a>
    </div>
    <div class="card">
        <div class="card-body">
            <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>

            <form method="post">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input asp-for="RecoverPassword.Password" class="form-control" placeholder="@Html.DisplayNameFor(x=>Model.RecoverPassword.Password)">
                    </div>
                    <span asp-validation-for="RecoverPassword.Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input asp-for="RecoverPassword.ConfirmPassword" class="form-control" placeholder="@Html.DisplayNameFor(x=>Model.RecoverPassword.ConfirmPassword)">
                    </div>
                    <span asp-validation-for="RecoverPassword.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Change password</button>
                    </div>
                </div>
            </form>

            <p class="mt-3 mb-1">
                <a asp-page="Login">Login</a>
            </p>
        </div>
    </div>
</div>