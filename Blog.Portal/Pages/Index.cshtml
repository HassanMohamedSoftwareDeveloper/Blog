@page
@using Blog.Portal.Helpers
@model IndexModel
@{
    var basePath = Request.PathBase;
    Layout = null;
    string userImage = $"{basePath}/Image/{User.UserImage()}";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hassan Blog</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/Blog.css">
    <style>
        .follow-us a {
            font-size: 32px;
            width: 32px;
            height: 32px;
            line-height: 32px;
            margin: 3px;
            transition: 500ms;
        }

            .follow-us a :hover {
                transform: scale(1.2);
            }

            .follow-us a i {
                font-size: 32px;
            }

        @@media (max-width: 550px) {
            .follow-us {
                transform: unset;
                width: 100%;
                flex-direction: row;
                padding: 16px 0;
                justify-content: center;
                visibility: visible;
            }
        }
    </style>
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container-fluid">
                <a href="/" class="navbar-brand">
                    <img src="~/Static/logo.ico" alt=".." class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light">Blog</span>
                </a>

                <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Blog" class="nav-link">Blog</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a href="~/Admin/Posts" class="nav-link">Portal</a>
                            </li>
                        }
                    </ul>
                </div>


                <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class=" nav-link" data-toggle="dropdown">
                                <img width="35" height="35" src="@userImage" class="img-circle" alt="..">
                            </a>
                            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                                <span class="dropdown-item dropdown-header">@User.UserFullName()</span>
                                <div class="dropdown-divider"></div>
                                <a asp-page="/Auth/Login" asp-page-handler="Logout" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt mr-2"></i> Sign Out
                                </a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class=" nav-item">
                            <a class=" nav-link" asp-page="/Auth/Login"><i class="fas fa-sign-in-alt"></i> Login</a>
                        </li>
                        <li class=" nav-item">
                            <a class=" nav-link" asp-page="/Auth/Register"><i class="fas fa-user-plus"></i> SignUp</a>
                        </li>
                    }
                    <!-- Navbar Search -->
                    <li class="nav-item">
                        <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                            <i class="fas fa-search"></i>
                        </a>
                        <div class="navbar-search-block" id="SearchFormDiv">
                            <form method="get" class="form-inline" id="SearchForm">
                                <div class="input-group input-group-sm">
                                    <input id="SearchFormSearch" name="search" class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                    <div class="input-group-append">
                                        <button class="btn btn-navbar" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                        <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="content-wrapper">
            <div class="content">
                <div class="container-fluid p-2">
                    <div class="row ">
                        <div class="col-sm-12 text-center">
                            <a style="color: #869099;" href="~/blog">
                                <h1 style="line-height: 1;font-size: 1.7rem;">
                                    <strong>LATEST TUTORIALS</strong>
                                </h1>
                            </a>
                        </div>
                        @foreach (var post in Model.LatestPosts)
                        {
                            string postImage = $"{basePath}/Image/{post.Image}";
                            string userPostImage = $"{basePath}/Image/{post.User.Image}";
                            <div class="col-md-4 mr-2">
                                <div class="row post-image-container">
                                    <a class="post-image" href="~/Tutorial/@post.Id" title="@post.Title">
                                        <img src="@postImage" class="post-image img-fluid " alt="..">
                                    </a>
                                </div>
                                <div class="row">
                                    <a href="~/Tutorial/@post.Id" title="@post.Title">
                                        <h5 class="card-title m-0 post-title">@post.Title</h5>
                                    </a>
                                </div>
                                <div class="row ">
                                    <div class="post-date d-flex justify-content-between align-items-center">
                                        <a class="d-flex align-items-center flex-wrap mr-3" href="#">
                                            <div class="post-avatar">
                                                <img src="@userPostImage" class="img-fluid" alt="..">
                                            </div>
                                            <div class="user-title ">
                                                <span>@post.User.FullName</span>
                                            </div>
                                        </a>
                                        <span><i class="fas fa-clock mr-2"></i> @post.PostDate</span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <footer class="main-footer">
            <div class="row " style="border-bottom:solid;border-bottom-width:1px; border-bottom-color:#e3e5e9;">
                <div class="col-md-4">
                    <div class=" row text-left">
                        <h2 class="ml-2 mb-2" style="line-height: 1;font-size: 1.7rem;">
                            <strong>HassaMohamed.website</strong>
                        </h2>
                        <p>
                            HassaMohamed.website is an online tutorial website to learn about ASP.NET Core, ASP.NET MVC, AngularJS, C#, VB.NET, AJAX, JQuery, WCF, LINQ, Android, Java and more.
                        </p>
                    </div>
                    <div class="row">
                        <ul style="padding-left:0px;" class="d-flex justify-content-between align-items-center">
                            <li class="list-inline-item follow-us">
                                <a href="https://www.facebook.com/HassanMohamedSoftwareDeveloper" target="_blank">
                                    <i style="color: #1877f2;" class="fab fa-facebook-square"></i>
                                </a>
                            </li>
                            <li class="list-inline-item follow-us">
                                <a href="https://twitter.com/HMSoftwareDev" target="_blank">
                                    <i style="color: #1da1f2;" class="fab fa-twitter-square"></i>
                                </a>
                            </li>
                            <li class="list-inline-item follow-us">
                                <a href="https://www.linkedin.com/in/hassanmohamedsoftwaredeveloper/" target="_blank">
                                    <i style="color: #0077b5;" class="fab fa-linkedin"></i>
                                </a>
                            </li>
                            <li class="list-inline-item follow-us">
                                <a href="http://wa.me/+201014983543/" target="_blank">
                                    <i style="color: #075e54;" class="fab fa-whatsapp-square"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <div class="text-left">
                        <h2 class="ml-2  mb-2" style="line-height: 1;font-size: 1.7rem;"><strong>Subscribe</strong></h2>
                        <p>
                            Subscribe to our newsletter to receive the latest news, posts and freebies straight in your inbox.
                        </p>
                        <div>
                            <form method="post" asp-page="Index" asp-page-handler="Subscribe">
                                <div class="form-group">

                                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email">
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="SUBMIT" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <strong>Copyright &copy; @(DateTime.Now.Year) <a href="http://www.hassanmohamed.website">Hassan mohamed</a>.</strong> All rights reserved.
        </footer>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>

    <script src="~/lib/bs-stepper/js/bs-stepper.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#SearchFormDiv").on('submit', '#SearchForm', function (e) {
                e.preventDefault();
                window.location.href = "/search/" + $("#SearchFormSearch").val();
            });
        });
    </script>
</body>
</html>