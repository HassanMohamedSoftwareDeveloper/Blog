@page "/Blog/{id}"
@using Blog.Portal.Helpers
@model Blog.Portal.Pages.Dashboard.PostModel
@{
    var basePath = Request.PathBase;
    string postImage = $"{basePath}/Image/{Model.BlogPostModel.Post.Image}";
    string userImage = $"{basePath}/Image/{Model.BlogPostModel.Post.User.Image}";
    string loginedUserImage = $"{basePath}/Image/{User.UserImage()}";
    ViewData["Title"] = "Blog";
    Layout = "_BlogLayout";
}


<style>
     .vertical-scrollable {
         height:400px;
            position: relative;
            overflow-x: hidden;
            overflow-y: scroll;
        }
    .card-header {
        background-color: rgba(0,0,0,0.05) !important;
    }

    .post-title {
        color: #555;
        font-weight: 700 !important;
    }

    .card-header a {
        color: #555;
    }

    .post-description {
        color: #6c757d !important;
        font-weight: 400;
        font-size: 0.95em;
        clear: both;
        text-align: justify;
    }

    .post-image-container {
        height: 300px;
        margin-bottom: .5rem !important;
    }

    .post-image {
        width: -webkit-fill-available;
        height: -webkit-fill-available;
    }

    .post-category {
        color: #999;
        letter-spacing: 0.05em;
        font-weight: 700;
        text-transform: uppercase;
        text-decoration: none;
        margin: 10px 0;
        background-color: rgba(0,0,0,.06) !important;
    }

        .post-category a {
            font-size: 13px;
            color: #999;
        }

    .post-date {
        letter-spacing: 0.05em;
        font-weight: 400;
        color: #999;
        text-transform: capitalize;
        margin: 10px 0;
        font-size: 0.8em;
    }

    .post-avatar {
        max-width: 40px;
        min-width: 40px;
        height: 40px;
        overflow: hidden;
        border-radius: 50%;
        margin-right: 10px;
    }

    .user-title {
        font-weight: 400;
        color: #999;
        text-transform: capitalize;
    }

    .comments {
        font-weight: 400;
        color: #999;
        text-transform: capitalize;
        letter-spacing: 0.05em;
    }

    .card-body {
        padding: 0 .5rem;
    }

    .tag {
        transition-delay: 0s;
        transition-timing-function: ease;
        transition-duration: 0.3s;
        transition-property: all;
        display: inline-block;
        padding: 5px 25px;
        border: 1px solid #ddd;
        margin: 5px 0;
        color: #777;
        font-size: 0.75em;
        text-transform: uppercase;
        font-weight: 600;
        text-decoration: none;
        border-radius: 50px;
    }

    .category {
        background: #fafafa;
        padding: 10px;
        color: #777;
        font-weight: 700;
    }

        .category:nth-of-type(2n+2) {
            background: none;
        }

        .category a {
            color: inherit;
            font-size: 0.95em;
        }

            .category a:hover {
                color: #000;
                text-decoration: none;
            }

        .category span {
            font-size: 0.9em;
            color: #aaa;
        }

    .tag:hover {
        background: #999;
        color: #fff;
        border-color: #999;
    }

    .latest-posts a {
        display: block;
        color: #555;
        text-decoration: none;
    }

        .latest-posts a:hover {
            color: #000;
        }

    .latest-posts .image {
        min-width: 60px;
        max-width: 60px;
        height: 60px;
        overflow: hidden;
        margin-right: 20px;
    }

    .latest-posts .item {
        margin-bottom: 20px;
    }

    .latest-posts strong {
        font-size: 0.95em;
        display: block;
        line-height: 1em;
    }

    .latest-posts .views,
    .latest-posts .comments {
        font-size: 0.8em;
        font-weight: 400;
        color: #bbb;
        margin-top: 10px;
    }

        .latest-posts .views i,
        .latest-posts .comments i {
            margin-right: 5px;
        }

        .latest-posts .views::after,
        .latest-posts .comments::after {
            content: '|';
            display: inline-block;
            margin: 0 7px;
            font-size: 0.9em;
            color: #ccc;
        }

        .latest-posts .comments::after {
            display: none;
        }
</style>
<link rel="stylesheet" href="../../lib/select2/css/select2.min.css">
<link rel="stylesheet" href="../../lib/select2-bootstrap4-theme/select2-bootstrap4.min.css">
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"> Blog <small>Posts</small></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Blog</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title m-0 post-title">@Model.BlogPostModel.Post.Title</h5>
                            </div>
                            <div class="card-body">
                                <div class="row post-image-container">
                                    <a href="#" class="post-image">
                                        <img src="@postImage" class="post-image img-fluid " alt="..">
                                    </a>
                                </div>

                                <div class="row" style="padding-right:.25rem;padding-left:.25rem;">

                                    <div class="col-sm-12 d-flex justify-content-between align-items-center">
                                        <div >
                                            <button type="button" class="btn btn-default btn-sm"><i class="fas fa-share"></i> Share</button>
                                            <button type="button" class="btn btn-default btn-sm"><i class="far fa-thumbs-up"></i> Like</button>
                                        </div>
                                        <div class="post-date">@Model.BlogPostModel.Post.PostDate</div>
                                        <div class="post-category">
                                            <a href="#">@Model.BlogPostModel.Post.Category</a>
                                        </div>
                                    </div>

                                    <div style="background-color: rgba(0,0,0,.03);" class="col-sm-12 d-flex justify-content-between align-items-center">
                                        <a class="d-flex align-items-center flex-wrap" href="#">
                                            <div class="post-avatar">
                                                <img src="@userImage" class="img-fluid" alt="..">
                                            </div>
                                            <div class="user-title">
                                                <span>@Model.BlogPostModel.Post.User.FullName</span>
                                            </div>
                                        </a>
                                        <div class="post-date ">
                                            <span><i class="fas fa-clock"></i> @Model.BlogPostModel.Post.TimeAgo</span>
                                        </div>
                                        <div class="comments ">
                                            <i class="fas fa-eye"></i><b>@Model.BlogPostModel.Post.ViewersCount</b>
                                        </div>
                                        <div class="comments ">
                                            <i class="fas fa-comments"></i><b>@Model.BlogPostModel.Post.CommentsCount</b>
                                        </div>
                                    </div>

                                    <div class="col-sm-12 mb-2">
                                        <p class="post-description mt-2 text-muted">
                                            @Model.BlogPostModel.Post.Description
                                        </p>
                                    </div>
                                    <div class="col-sm-12 vertical-scrollable" style="background-color: rgba(0,0,0,.03);border-bottom-style: solid;border-bottom-color: rgba(0,0,0,.1);">
                                        @Html.Raw(Model.BlogPostModel.Post.Body)
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer card-comments">
                                @foreach (var comment in Model.BlogPostModel.Post.Comments)
                                {
                                    string commentUserImage = $"{basePath}/Image/{comment.User.Image}";
                                    <div class="card-comment">
                                        <img class="img-circle img-sm" src="@commentUserImage" alt="..">
                                        <div class="comment-text">
                                            <span class="username">
                                                @comment.User.FullName
                                                <span class="text-muted float-right"><span class="mr-2">@comment.TimeAgo</span>  @comment.CommentDate </span>
                                            </span>
                                            @comment.Message
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="card-footer">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-page="Post" asp-page-handler="Comment" method="post">
                                        <input type="hidden" name="postId" asp-for="BlogPostModel.Post.Id" />
                                        <img class="img-fluid img-circle img-sm" src="@loginedUserImage" alt="..">
                                        <div class="img-push">
                                            <input name="comment" type="text" class="form-control form-control-sm" placeholder="Press enter to post comment">
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <div>
                                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-sign-in-alt"></i> Login</button>
                                        <button type="button" class="btn btn-default btn-sm"><i class="fas fa-user-plus"></i> SignUp</button>
                                        <label>To be able to write a Comment.</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title m-0">Search the Blog</h5>
                            </div>
                            <div class="card-body" style="padding-top:1rem;">
                                <form>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    Category :
                                                </span>
                                            </div>
                                            <select name="categoryId" asp-items='new SelectList(Model.BlogPostModel.Categories,"Id","Name")' class="form-control select2bs4">
                                                <option value="@null">Select Category</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <input type="search" class="form-control" placeholder="Type your keywords here">
                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-default">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title m-0">Latest Posts</h5>
                            </div>
                            <div class="card-body" style="padding-top:1rem;">
                                <div class="col-sm-12">
                                    @foreach (var latestPost in Model.BlogPostModel.LatestPosts)
                                    {
                                        string latestPostImage = $"{basePath}/Image/{latestPost.Image}";

                                        <div class="latest-posts">
                                            <a  asp-route-id="@latestPost.Id">
                                                <div class="item d-flex   align-items-center">
                                                    <div class="image">
                                                        <img src="@latestPostImage" alt="..." class="img-fluid">
                                                    </div>
                                                    <div class="title">
                                                        <strong>@latestPost.Title</strong>
                                                        <div class="d-flex align-items-center ">
                                                            <div class="views mr-3">
                                                                <i class="fas fa-eye mr-1"></i> @latestPost.ViewersCount
                                                            </div>
                                                            <div class="comments">
                                                                <i class="fas fa-comments mr-1"></i>@latestPost.CommentsCount
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title m-0">Categories</h5>
                            </div>
                            <div class="card-body" style="padding-top:1rem;">
                                <div class="col-sm-12">
                                    @foreach (var category in Model.BlogPostModel.Categories)
                                    {
                                        <div class="category d-flex justify-content-between mb-3">
                                            <a href="#">@category.Name</a>
                                            <span>@category.PostsCount</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title m-0">Tags</h5>
                            </div>
                            <div class="card-body" style="padding-top:1rem;">
                                <div class="col-sm-12">
                                    <ul class="list-inline" style="padding: 0;margin: 0;">
                                        @foreach (var tag in Model.BlogPostModel.Tags)
                                        {
                                            <li class="list-inline-item">
                                                <a class="tag" href="#">
                                                    #@tag.Tag
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="../../lib/select2/js/select2.full.min.js"></script>
    <script src="../../lib/bs-stepper/js/bs-stepper.min.js"></script>
    <script>
        $(document).ready(function () {

            var maxHeight = -1;

            $('.desc').each(function () {
                maxHeight = maxHeight > $(this).height() ? maxHeight : $(this).height();
            });

            $('.desc').each(function () {
                $(this).height(maxHeight);
            });

            $('.select2bs4').select2({
                theme: 'bootstrap4'
            });
        });
    </script>

}