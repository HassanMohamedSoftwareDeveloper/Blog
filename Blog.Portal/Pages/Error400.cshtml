@page "/Error400/{error}"
@model Blog.Portal.Pages.Error400Model
@{
    var basePath = Request.PathBase;
    ViewData["Title"] = "400 Bad request";
    Layout = "_ErrorLayout";
}

<section class="content">
    <div class="error-page">
        <h2 class="headline text-danger"> 400</h2>

        <div class="error-content">
            <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops! Bad request.</h3>
            <p class=" text-danger">
                @Model.Error
            </p>
            <p>
                Meanwhile, you may <a href="~/" title="Home">return to home</a> or try using the search form.
            </p>

            <form class="search-form">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search">

                    <div class="input-group-append">
                        <button type="submit" name="submit" class="btn btn-danger">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
