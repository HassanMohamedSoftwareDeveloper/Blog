@model IndexViewModel
@{
    ViewBag.Title = "Blog Website";
    ViewBag.Description = "This Blog has everything";
    ViewBag.keywords = "Blog Programming Travel Photography";
    var basePath = Context.Request.PathBase;
}

<div class="main-img">
    <span class="title">Amazing Blog Site</span>
</div>
<div class="container">

    @foreach (var post in Model.Posts)
    {
        var imagePath = $"{basePath}/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@imagePath" />
            <span class="title">@post.Title</span>
        </a>
    }
    <div class="pages">
        @if (Model.PageNumber > 1)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-category="@Model.Category"
           asp-route-pageNumber="@(Model.PageNumber-1)">&lt;</a>
        }
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            string activeClass =i==Model.PageNumber?"active": ""; 
            <a class="@activeClass" asp-controller="Home" asp-action="Index" asp-route-category="@Model.Category"
           asp-route-pageNumber="@i">@i</a>
        }
        @if (Model.NextPage)
        {
            <a asp-controller="Home" asp-action="Index" asp-route-category="@Model.Category"
           asp-route-pageNumber="@(Model.PageNumber+1)">&gt;</a>
        }
    </div>
</div>