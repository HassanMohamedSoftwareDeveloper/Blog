<section class="featured-posts no-padding-top">
    <div class="container">
        @{
            int index = 1;
        }
        @foreach (var post in Model.Posts)
        {
            var imagePath = $"{basePath}/Image/{post.Image}";
            bool isRight = index % 2 == 0;
            <div class="row d-flex align-items-stretch">

                @if (isRight is false)
                {
                    <div class="image col-lg-5">
                        <img src="@imagePath" alt="...">
                    </div>
                }
                <div class="text col-lg-7">
                    <div class="text-inner d-flex align-items-center">
                        <div class="content">
                            <header class="post-header">
                                <div class="category">
                                    <a asp-controller="Home" asp-action="Index" asp-route-category="@post.Category">@post.Category</a>
                                </div>
                                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
                                    <h2 class="h4">@post.Title</h2>
                                </a>
                            </header>
                            <p>@post.Description</p>
                            <footer class="post-footer d-flex align-items-center">
                                <a href="#" class="author d-flex align-items-center flex-wrap">
                                    <div class="avatar"><img src="~/img/avatar-1.jpg" alt="..." class="img-fluid"></div>
                                    <div class="title"><span>User Name</span></div>
                                </a>
                                <div class="date"><i class="icon-clock"></i>@(DateTime.Now.Subtract(post.Created).TotalDays) days ago</div>
                                <div class="comments"><i class="icon-comment"></i>@post.MainComments.Count</div>
                            </footer>
                        </div>
                    </div>
                </div>

                @if (isRight)
                {
                    <div class="image col-lg-5">
                        <img src="@imagePath" alt="...">
                    </div>
                }

            </div>
            index++;
        }

    </div>
    <div class="container">
        <partial name="_BlogPagination" model="Model" />
    </div>
</section>

