<nav aria-label="Page navigation example" style="margin-top:1rem;">
    <ul class="pagination pagination-template d-flex justify-content-center">
        @if (Model.PageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-category="@Model.Category"
               asp-route-pageNumber="@(Model.PageNumber-1)"><i class="fa fa-angle-left"></i></a>
            </li>
        }
        @foreach (var p in Model.Pages)
        {
            if (p == -1)
            {
                <span class="three-dots">...</span>
            }
            else
            {
                string activeClass = p == Model.PageNumber ? "active" : "";
                <li class="page-item">
                    <a class="page-link @activeClass" asp-controller="Home" asp-action="Index" asp-route-category="@Model.Category"
               asp-route-pageNumber="@p">@p</a>
                </li>
            }
        }
        @if (Model.NextPage)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-category="@Model.Category"
               asp-route-pageNumber="@(Model.PageNumber+1)"><i class="fa fa-angle-right"></i></a>
            </li>
        }
    </ul>
</nav>