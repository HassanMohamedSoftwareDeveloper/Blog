@model IEnumerable<PostDto>
@{
    ViewBag.Title = "Admin Panel";
}

<p class="mt-1">
    <a asp-controller="Panel" asp-action="Edit" class="btn btn-success">
        Add New Post
    </a>
</p>
<div class="container">
    <table class="table table-hover table-bordered ">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model=>model.Title)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(model=>post.Title)</td>
                    <td style="text-align:right;">
                        <a asp-controller="Panel" asp-action="Edit" asp-route-id="@post.Id" class="btn btn-primary"><i class="fa fa-pencil"></i></a> |
                        <a asp-controller="Panel" asp-action="Remove" asp-route-id="@post.Id" class="btn btn-danger"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>