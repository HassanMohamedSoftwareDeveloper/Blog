@model IEnumerable<PostDto>
@{
    var basePath = Context.Request.PathBase;
}


<div class="widget latest-posts">
    <header>
        <h3 class="h6">Latest Posts</h3>
    </header>
    <div class="blog-posts">
        @foreach (var post in Model)
        {
            var imagePath = $"{basePath}/Image/{post.Image}";
            <a asp-controller="Blog" asp-action="Post" asp-route-id="@post.Id">
                <div class="item d-flex align-items-center">
                    <div class="image"><img src="@imagePath" alt="..." class="img-fluid"></div>
                    <div class="title">
                        <strong>@post.Title</strong>
                        <div class="d-flex align-items-center">
                            <div class="views"><i class="icon-eye"></i> @post.ViewsCount</div>
                            <div class="comments"><i class="icon-comment"></i>@post.CommentsCount</div>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>
